<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/img_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/image_max_height"
            android:src="@drawable/fotk" />

        <TextView
            android:id="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_author"
            android:layout_centerHorizontal="true"
            android:text="@string/author_name"
            android:textSize="@dimen/author_name_textSize" />
        <ImageView
            android:id="@+id/img_dancing3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/author_name"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/dancing_gif_max_height" />
        <ImageView
            android:id="@+id/img_dancing1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/img_dancing3"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/dancing_gif_max_height" />

        <ImageView
            android:id="@+id/img_dancing2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/img_dancing3"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/dancing_gif_max_height" />

    </RelativeLayout>
</ScrollView>